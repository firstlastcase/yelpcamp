<%- include("../partials/header") %>

    <div class="container">
        <h2><%=campground.name %> </h2>
        <img class="campgroundImage" src="<%=campground.image %>" class="img-fluid" alt="Responsive image">
        <p> <%= campground.description %></p>
        <% campground.comments.forEach(function(comment) { %>
            <p> 
                <strong><%= comment.author %></strong> - <%=comment.context %>
            </p>
        <% });%>
                    
    </div>
    <div class="container">
        <a class="btn btn-secondary bt-sm"href="/campgrounds">Back to All Campgrounds</a>
        <a class="btn btn-info bt-sm" style="display: inline-block" href="/campgrounds/<%= campground._id%>/comments/new">Add a new comment</a>
    </div>
    
<%- include("../partials/footer") %>
