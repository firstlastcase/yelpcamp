<%- include("../partials/header") %>

<div class="container">
    <div class="container">
        <h3>Add a new Campground!</h3>
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <!--<label for="campgroundName">Enter the name of the new Campground: </label>-->
                <input type="text" name="campgroundName" placeholder="name of the campground" id="campgroundName" required>
            </div>
            <div class="form-group">
                <!--<label for="campgroundImage">Enter the image URL of the new Campground: </label>-->
                <input type="url" name="campgroundImage" placeholder="Image URL of the campground" required>
            </div>
            <div class="form-group">
                <input type="textarea" name="campgroundDesc" placeholder="Description" required>
            </div>
            <button type="submit" class="btn btn-primary">Add it!</button>
            
        </form>
    </div>
    <br>
    <a href="/campgrounds">Cancel and Go Back</a>
</div>


<%- include("../partials/footer") %>