<!--new comment-->
<%- include("../partials/header") %>

<div class="container">
    <div class="container">
        <h2 style="text-align: center">Add a new Comment to <%= campground.name %></h2>
        <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
            <div class="form-group">
                <input type="textarea" name="comment[context]" placeholder="write your comment here" required>
            </div>
            <div class="form-group">
                <input type="text" name="comment[author]" placeholder="Author" id="commentAuthor" required>
            </div>

            <button type="submit" class="btn btn-primary">Add it!</button>
            
        </form>
    </div>
    <br>
    <a href="/campgrounds/<%=campground._id %>">Cancel and Go Back</a>
</div>


<%- include("../partials/footer") %>